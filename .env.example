# AI Backtest Platform - Environment Variables
# Copy this file to .env and adjust values as needed

# ===========================================
# Redis Configuration
# ===========================================
REDIS_URL=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ===========================================
# Backend Configuration
# ===========================================
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# ===========================================
# Job Configuration
# ===========================================
# Maximum job execution time in seconds (default: 30 minutes)
JOB_TIMEOUT_SEC=1800

# Maximum stdout size in bytes (default: 20MB)
MAX_STDOUT_SIZE=20971520

# ===========================================
# Celery Configuration
# ===========================================
# Number of concurrent worker processes
CELERY_CONCURRENCY=2

# ===========================================
# Project Paths
# ===========================================
# Root path for engine scripts (in Docker: /app)
PROJECT_ROOT=/app
